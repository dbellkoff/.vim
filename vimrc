execute pathogen#infect()
syntax on
filetype plugin indent on

"let g:indent_guides_enable_on_vim_startup = 0 
"set background=dark
"hi IndentGuidesOdd  ctermbg=black
"hi IndentGuidesEven ctermbg=darkgrey


set number
set tabstop=2
set expandtab
set hlsearch
set incsearch

map <C-n> :NERDTreeToggle<CR>

"disble arrow keys
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
